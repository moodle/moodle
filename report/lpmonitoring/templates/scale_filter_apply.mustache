{{!
    Competency scale filter template application.

    Classes required for JS:
    * learningplan

    Context variables required for this template:
    none.
}}
<div class="scalefiltercontainer">
    {{#cmcompgradingenabled}}
    <div class="fitem fitem_fradio fitem_fradiogroup">
        <div class="fradio radio radio-primary">
            <span>
                <input type="radio" name="optionscalefilter" id="scalefiltercoursemodule" value="2" disabled="disabled" aria-labelledby="scalefilterapply">
                <label for="scalefiltercoursemodule">{{#str}}finalratingcoursemodule, report_lpmonitoring{{/str}}</label>
            </span>
        </div>
    </div>
    {{/cmcompgradingenabled}}
    <div class="fitem fitem_fradio fitem_fradiogroup">
        <div class="fradio radio radio-primary">
            <span>
                <input type="radio" name="optionscalefilter" id="scalefiltercourse" value="1" disabled="disabled" aria-labelledby="scalefilterapply">
                <label for="scalefiltercourse">{{#str}}finalratingcourse, report_lpmonitoring{{/str}}</label>
            </span>
        </div>
    </div>
    <div class="fitem fitem_fradio femptylabel">
        <div class="fradio radio radio-primary">
            <span>
                <input type="radio" name="optionscalefilter" id="scalefilterplan" value="0" disabled="disabled"  aria-labelledby="scalefilterapply">
                <label for="scalefilterplan">{{#str}}finalrating, report_lpmonitoring{{/str}}</label>
            </span>
        </div>
    </div>
</div>
