{{!
    List course in competency template

    Context variables required for this template:
    * listtotalcourses courses list
      * coursename course name
      * url course url
      * rated if the competency is rated in the course

}}
<div class="lpmonitoringdialogue">
<table class="listcourseincompetencytable dataTable" id="listcoursecompetency-{{competencyid}}">
    <thead>
        <tr>
            <th scope="col">{{#str}}courses{{/str}}</th>
            <th scope="col">{{#str}}rated, report_lpmonitoring{{/str}}</th>
        </tr>
    </thead>
    <tbody>
        {{#listtotalcourses}}
        <tr>
            <td><a target="_blank" href="{{{url}}}" title="{{coursename}}">{{coursename}}</a></td>
            <td>
                {{#rated}}
               <span class="badge badge-success">{{#str}}yes{{/str}}</span>
               {{/rated}}
               {{^rated}}
               <span class="badge badge-danger">{{#str}}no{{/str}}</span>
               {{/rated}}
            </td>
        </tr>
        {{/listtotalcourses}}
    </tbody>
</table>
</div>
