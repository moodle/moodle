        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="Text.Type">
        <xs:annotation>
            <xs:documentation source="umldocumentation">
                The Text for the discussion topic.
            </xs:documentation>
        </xs:annotation>
        <xs:simpleContent>
            <xs:extension base="xs:string">
                <xs:attribute name="texttype" use="required">
                    <xs:simpleType>
