        <xs:annotation>
            <xs:documentation source="umldocumentation">
                The Topic complexType for the discussion topic object.
            </xs:documentation>
        </xs:annotation>
        <xs:sequence>
            <xs:element name="title" type="xs:normalizedString" minOccurs = "1" maxOccurs = "1"/>
