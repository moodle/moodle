{{!
    @template core/toggle

    Template for toggle element

    Example context (json):
    {
        "id": "reality-toggle-3",
        "checked": true,
        "disabled": false,
        "extraattributes": [{
            "name": "data-action",
            "value": "toggle-reality"
        }],
        "title": "Title example",
        "label": "Enable/disable reality",
        "labelclasses": "visually-hidden"
    }
}}

<div class="form-check form-switch {{$extraclasses}}{{extraclasses}}{{/extraclasses}}">
    <input type="checkbox" class="form-check-input" id="{{$id}}{{id}}{{/id}}"
        {{$attributes}}
            {{#extraattributes}}{{name}}="{{value}}" {{/extraattributes}}
            {{#checked}}checked{{/checked}}
            {{#disabled}}disabled{{/disabled}}
            {{! TODO MDL-86619: dataattributes will be removed in 6.0. Use extraattributes instead. }}
            {{#dataattributes}}data-{{name}}="{{value}}" {{/dataattributes}}
        {{/attributes}}
        {{#title}}
            data-bs-toggle="tooltip" data-bs-placement="top" title="{{title}}"
        {{/title}}>
    {{$labelmarkup}}
        <label class="form-check-label" for="{{$id}}{{id}}{{/id}}">
            <span class="{{$labelclasses}}{{labelclasses}}{{/labelclasses}}">{{$label}}{{label}}{{/label}}</span>
        </label>
    {{/labelmarkup}}
</div>
