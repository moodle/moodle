{{!
    @template file/db_mobile

    Mobile add-ons db/mobile.php file.

    Context variables required for this template:
    * component
    * copyright
    * mobile_addons

    Example context (json):
    {
        "component": "local_test",
        "copyright": "2021 David Mudr√°k <david@moodle.com>",
        "mobile_addons": []
    }
}}
{{< common/boilerplate_php }}
{{$ description }}Mobile addons are declared here.{{/ description }}
{{$ package }}{{ component }}{{/ package }}
{{$ copyright }}{{ copyright }}{{/ copyright }}
{{/ common/boilerplate_php }}

$addons = array(
    {{# mobile_addons }}

    '{{ .name }}' => array({{# .addon_has_dependencies }}
        'dependencies' => array({{# dependencies }}'{{ .name }}', {{/ dependencies }})
    {{/ .addon_has_dependencies }}),
    {{/ mobile_addons }}
);
