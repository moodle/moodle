$THEME->name = '{{ component_name }}';

{{# self.has_doctype }}
$THEME->doctype = '{{ theme_features.doctype }}';
{{/ self.has_doctype }}

{{# self.has_parents }}
$THEME->parents = array(
    {{# theme_features.parents }}
    '{{ .base_theme }}',
    {{/ theme_features.parents }}
);
{{/ self.has_parents }}

{{# self.has_stylesheets }}
$THEME->sheets = array(
    {{# theme_features.stylesheets }}
    '{{ .name }}',
    {{/ theme_features.stylesheets }}
);
{{/ self.has_stylesheets }}

