{{!
    @template mod_questionnaire/mobile_text_question

    Template which defines a text question display in the mobile app.

    Context variables required for this template:
    * fieldkey - integer: ID of the question.
    * completed - boolean: True if question already completed.

    Example context (json):
    {
        "fieldkey": 985,
        "completed": 0
    }
}}
{{=<% %>=}}
<ion-item>
    <ion-label>
        <%#completed%>
        <core-format-text text="{{ CONTENT_OTHERDATA.<%fieldkey%> }}"></core-format-text>
        <%/completed%>
    </ion-label>
    <%^completed%>
    <ion-textarea aria-multiline="true" [(ngModel)]="CONTENT_OTHERDATA.<%fieldkey%>"
                  core-auto-rows></ion-textarea>
    <%/completed%>
</ion-item>