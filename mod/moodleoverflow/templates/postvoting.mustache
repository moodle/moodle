{{!
  @template mod_moodleoverflow/postvoting

  Moodleoverflow postvoting template.
  The purpose of this template is to render the vote-section for questions and answers.

  Example context (json):
  {
  }
}}

{{! Did the current user upvoted this post? }}
{{#userupvoted}}
{{! Can the user change the vote? }}
    {{#canchange}}
        <a class="upvote active" href="javascript:void(0)">
            {{# pix}} vote/upvoted, moodleoverflow, {{#str}}upvote, moodleoverflow{{/str}}{{/ pix}}
        </a>
    {{/canchange}}
    {{^canchange}}
        {{# pix}} vote/upvotedfinal, moodleoverflow, {{#str}}upvotenotchangeable, moodleoverflow{{/str}}{{/ pix}}
    {{/canchange}}
{{/userupvoted}}
{{^userupvoted}}
    {{#canchange}}
        <a class="upvote" href="javascript:void(0)">
            {{# pix}} vote/upvote, moodleoverflow, {{#str}}noupvote, moodleoverflow{{/str}}{{/ pix}}
        </a>
    {{/canchange}}
    {{^canchange}}
        {{# pix}} vote/upvote, moodleoverflow, {{#str}}noupvote, moodleoverflow{{/str}}{{/ pix}}
    {{/canchange}}
{{/userupvoted}}

{{! Display the amount of votes. }}
<p>{{ votes }}</p>

{{! Did the current user upvoted this post? }}
{{#userdownvoted}}
{{! Can the user change its vote? }}
    {{#canchange}}
        <a class="downvote active" href="javascript:void(0)">
            {{# pix}} vote/downvoted, moodleoverflow, {{#str}}downvote, moodleoverflow{{/str}}{{/ pix}}
        </a>
    {{/canchange}}
    {{^canchange}}
        {{# pix}} vote/downvotedfinal, moodleoverflow, {{#str}}downvotenotchangeable, moodleoverflow{{/str}}{{/ pix}}
    {{/canchange}}
{{/userdownvoted}}
{{^userdownvoted}}
    {{#canchange}}
        <a class="downvote" href="javascript:void(0)">
            {{# pix}} vote/downvote, moodleoverflow, {{#str}}nodownvote, moodleoverflow{{/str}}{{/ pix}}
        </a>
    {{/canchange}}
    {{^canchange}}
        {{# pix}} vote/downvote, moodleoverflow, {{#str}}nodownvote, moodleoverflow{{/str}}{{/ pix}}
    {{/canchange}}
{{/userdownvoted}}