{{!
    @template theme_snap/featured_course


    Example context (json):
    {
        "number" : "1",
        "url" : "http://someurl.local",
        "coverimageurl" : "http://someurl.local",
        "title" : "Super cool course!"
    }
}}
<div class="col-sm-3" id="snap-featured-course-{{number}}">
    <a href="{{url}}" class="snap-featured-course">
        <!--Card content-->
        <div class="snap-featured-course-image" style="background-image: url({{coverimageurl}});"></div>
        <span class="snap-featured-course-title">{{title}}</span>
    </a>
</div>
