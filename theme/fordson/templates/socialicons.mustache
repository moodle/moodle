{{!
    @template theme_fordson/socialicons

    fordson Social Icons display.

    Context variables required for this template:
    * hassocialnetworks
    * hasfacebook
    * has twitter
    * hasgoogleplus
    * haslinkedin
    * hasyoutube
    * hasflickr
    * hasvk
    * haspinterest
    * hasinstagram
    * hasskype
    * haswebsite
    * hasblog
    * hasvimeo
    * hastumblr
    * hassocial1
    * hassocial1icon
    * hassocial2
    * hassocial2icon
    * hassocial3
    * hassocial3icon
}}

{{#hassocialnetworks}}
    <div class="socials_wrapper">
        <ul class="socials">
            {{#socialicons}}
                {{#haslink}}
                    <a href = {{{haslink}}} class = "socialicon blog" title = "{{{haslink}}}" alt="{{{haslink}}}" target="_blank">
                    <span class="fa-stack fa-1x">
                    <i class="fa fa-square fa-stack-2x"></i>
                    <i class="fa fa-{{{linkicon}}} fa-inverse fa-stack-1x"></i>
                    </span>
                    <span class="sr-only">{{{haslink}}}</span>
                    </a>
                {{/haslink}}
            {{/socialicons}}
        </ul>
    </div>
{{/hassocialnetworks}}
