{{!
    @template theme_academi/maintenance

    Academi maintenance layout template.

    Context variables required for this template:
    * output - The core renderer for the page

    Example context (json):
    {
        "output": {
            "doctype": "<!DOCTYPE html>",
            "page_title": "Test page",
            "favicon": "favicon.ico",
            "main_content": "<h1>Headings make html validators happier</h1>"
         }
    }
}}
{{{ output.doctype }}}
<html {{{ output.htmlattributes }}}>
<head>
    <title>{{{ output.page_title }}}</title>
    <link rel="shortcut icon" href="{{{ output.favicon }}}" />
    {{{ output.standard_head_html }}}
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body {{{ output.body_attributes }}}>

{{> core/local/toast/wrapper}}

<div id="page-wrapper" class="">

    <div class="header-main ">
        <div class="container-fluid">
            <nav class="navbar navbar-light bg-faded ">
                <a href="{{{ config.wwwroot }}}/?redirect=0" class="navbar-brand {{^ logourl }}
                        hidden-sm-down
                    {{/ logourl }}">
                    <span class="site-name hidden-sm-down">{{{ sitename }}}</span>
                </a>
            </nav>
        </div>
    </div>

    <div id="page" class="container pb-3">

        <div class="row ">
            <div class="col-12 py-3">
                {{{ output.page_heading }}}
            </div>
        </div>

        <div id="page-content" class="row">
            <section id="region-main" class="col-12" aria-label="{{#str}}content{{/str}}">
                {{{ output.main_content }}}
            </section>
        </div>

    </div>
    {{> theme_academi/footer }}
</div>

</body>
</html>

