{{#showloggedinonly}}
<div class="sidebar">
    <div class="sidebar-items">

        <div class="dropdown">
              <a href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-tooltip="tooltip" data-placement= "bottom" title="{{{mycourses}}}" class="sideicon mydashboard"><i class="fa fa-user"></i></a>

                <div class="dropdown-menu iconsidebar">
                  <h5>{{{mycourses}}}</h5>
                    {{{mycoursesmenu}}}
                </div>
        </div>
        
        {{{ editpage }}}

        {{#userisediting}}
            <a href="{{{addblockurl}}}" data-key="addblock" data-tooltip="tooltip" data-placement= "bottom" class="btn-danger sideicon editingblocks" title="{{{addblock}}}" class="sideicon"><i class="fa fa-th-large" aria-hidden="true"></i></a>
        {{/userisediting}}

      {{#showincourseonly}}
          <a href="#coursemanagement" data-tooltip="tooltip" data-placement="bottom" data-toggle="modal" title="{{{courseadmin}}}"class="sideicon coursemanagement"><i class="fa fa-tachometer" aria-hidden="true"></i><span class="sr-only">{{{courseadmin}}}</span></a>
      {{/showincourseonly}}

      {{#showloggedinonly}}

        {{#showondashboardonly}}
            <a href="{{{viewcoursesurl}}}" data-tooltip="tooltip" data-placement= "bottom" title="{{{viewcourses}}}" class="sideicon viewcourses"><i class="fa fa-book"></i></a>
        {{/showondashboardonly}}

        {{#hascreatecourse}}
            <a href="{{{createcourseurl}}}" data-tooltip="tooltip" data-placement= "bottom" title="{{{createcourse}}}" class="sideicon attention createacourse"><i class="fa fa-pencil"></i></a>
          {{/hascreatecourse}}

        {{#hasadminlink}}
          <a href="{{{siteadminurl}}}" data-tooltip="tooltip" data-placement= "bottom" title="{{{siteadmintitle}}}" class="sideicon siteadmin"><i class="fa fa-sitemap" aria-hidden="true"></i></a>
        {{/hasadminlink}}

      {{/showloggedinonly}}

    </div>
</div>
{{/showloggedinonly}}