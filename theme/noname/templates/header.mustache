{{!
    Page header.
}}
<header role="banner" class="navbar navbar-light bg-faded navbar-static-top moodle-has-zindex">

    <div class="container">

        <div class="clearfix">
            <button class="navbar-toggler pull-xs-right hidden-sm-up" data-toggle="collapse" data-target="#bd-main-nav" aria-expanded="false" aria-controls="bd-main-nav" type="button">â˜°<span class="sr-only">{{#str}}expand{{/str}}</span></button>
        </div>

        <a role="banner" href="{{{ config.wwwroot }}}" class="navbar-brand">
            {{# output.should_display_navbar_logo }}
                <div class="logo">
                    <img src="{{output.get_compact_logo_url}}" alt={{#quote}}{{sitename}}{{/quote}}>
                </div>
            {{/ output.should_display_navbar_logo }}
            <div class="site-name">{{{ sitename }}}</div>
        </a>

        <!-- user_menu -->
        {{{ output.user_menu }}}

        <!-- search_box -->
        {{{ output.search_box }}}

        <div class="collapse navbar-toggleable-xs" id="bd-main-nav">
            <nav class="nav navbar-nav">
                <!-- custom_menu -->
                {{{ output.custom_menu }}}
                <!-- page_heading_menu -->
                {{{ output.page_heading_menu }}}
            </nav>
        </div>
    </div>
</header>

