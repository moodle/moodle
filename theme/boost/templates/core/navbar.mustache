{{!
    @template core/navbar

    Navbar template.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * get_items - array of items
      * has_action - boolean
      * action - string
      * get_title - string
      * get_content - string

    Example context (json):
    {
        "get_items": [
            {
                "has_action": true,
                "action": "#",
                "get_title": "Test title",
                "get_content": "First & fresh"
            },
            {
                "has_action": true,
                "action": "#",
                "get_title": "Second item & a title",
                "get_content": "Second item"
            },
            {
                "has_action": false,
                "get_content": "Third item"
            },
            {
                "has_action": false,
                "get_content": "Fourth & last"
            }
        ]
    }
}}
<nav role="navigation">
    <ol class="breadcrumb">
        {{#get_items}}
            {{#has_action}}
                <li class="breadcrumb-item"><a href="{{{action}}}" {{#get_title}}title="{{get_title}}"{{/get_title}}>{{{get_content}}}</a></li>
            {{/has_action}}
            {{^has_action}}
                <li class="breadcrumb-item">{{{text}}}</li>
            {{/has_action}}
        {{/get_items}}
    </ol>
</nav>
