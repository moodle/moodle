{{!
    @template theme_moove/certificates

    Blocks drawer template

    Example context (json): {
        "title": "Certificates page",
        "subtitle": "Course certificates",
        "hascertificates": true,
        "coursescertificates": {
            "fullname": "Course fullname",
            "certificates": [{
                "downloadurl": "http://certificateurl...",
                "module": "simplecertificate",
                "name": "Certificate activity name"
            }]
        }
    }
}}
<h2 class="card-title">{{{ title }}}</h2>
<h3 class="card-subtitle mb-2 text-muted">{{{ subtitle }}}</h3>

{{#hascertificates}}
    {{#coursescertificates}}
        <div class="card mb-1">
            <div class="card-body">
                <h4 class="card-title">{{{ fullname }}}</h4>
                {{#certificates}}
                    <p class="card-text"><a target="_blank" href="{{ downloadurl }}">{{# pix }} icon, {{{ module }}} {{/ pix }} {{{ name }}}</a></p>
                {{/certificates}}
            </div>
        </div>
    {{/coursescertificates}}
{{/hascertificates }}
{{^hascertificates}}
    <div class="card mt-1">
        <div class="card-body">
            <p class="card-text">{{#str}}nohavecertificates, theme_moove{{/str}}</p>
        </div>
    </div>
{{/hascertificates}}