{{!
    @template theme_moove/frontpage_marketing

    Blocks drawer template

    Example context (json): {
        "shoulddisplaymarketing": true,
        "marketing1icon": "https://iconurl...",
        "marketing1heading": "The head title",
        "marketing1subheading": "The subhead title",
        "marketing1content": "The content",
        "marketing1url": "https://marketingurl..."
    }
}}
{{#shoulddisplaymarketing}}
    <div class="frontpage-marketing">
        <div class="container">
            <div class="card-deck">
                <div class="card">
                    <div class="card-body">
                        <img src="{{{ marketing1icon }}}" />
                        <h2>{{{ marketing1heading }}}</h2>
                        <h3>{{{ marketing1subheading }}}</h3>
                        <p>{{{ marketing1content }}}</p>
                        {{#marketing1url}}<a class="btn btn-primary" href="{{{ marketing1url }}}">{{#str}}readmore, theme_moove{{/str}}</a>{{/marketing1url}}
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <img src="{{{ marketing2icon }}}" />
