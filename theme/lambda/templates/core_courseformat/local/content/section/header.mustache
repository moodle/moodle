{{!
    @template core_courseformat/local/content/section/header

    Displays a course section header.

    Example context (json):
    {
        "id": 123,
        "name": "Section title",
        "title": "<a href=\"http://moodle/course/view.php?id=5#section-0\">Section title</a>",
        "url": "#",
        "headerdisplaymultipage": true,
        "editing": 0
    }
}}

{{#headerdisplaymultipage}}
    <h3 class="sectionid-{{id}}-title sectionname">
        {{{title}}}
    </h3>
{{/headerdisplaymultipage}}
{{^headerdisplaymultipage}}
    {{#sitehome}}
        <h2 class="sectionid-{{id}}-title sectionname">
            {{{title}}}
        </h2>
    {{/sitehome}}
    {{^sitehome}}
        <a data-toggle="collapse"
        href="#coursecontentcollapse{{num}}"
        id="collapssesection{{num}}"
        class="btn btn-icon mr-1 icons-collapse-expand stretched-link {{#contentcollapsed}}collapsed{{/contentcollapsed}}">
            
        </a>
        <h4>{{{title}}}</h4>
    {{/sitehome}}
{{/headerdisplaymultipage}}
