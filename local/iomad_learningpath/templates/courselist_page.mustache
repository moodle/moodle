{{!
    @template local_iomad_learningpath/manage_page

    Display learning path course list

    Howard Miller 2018
}}

<h2>{{ path.name }}</h2>

<div class="row">
    <div class="col-sm-6">
        <div class="form-group">
            <label for="selectedfilter">{{# str }}filter, local_iomad_learningpath{{/ str }}</label>
            <input class="form-control" type="text" name="selectedfilter">
        </div>
        <div class="card bg-light">
            <div class="card-header">
                {{# str }}coursesinpath, local_iomad_learningpath{{/ str }}<br />
                <small>{{# str }}clicktoremove, local_iomad_learningpath{{/ str }}</small>
            </div>
            <div class="card-body card-block">
                <p class="card-text">
                    {{^ iscourses }}
                        <div class="alert alert-warning">
                            {{# str }}nocoursesinpath, local_iomad_learningpath{{/ str }}
                        </div>
                    {{/ iscourses }}
                    {{# iscourses }}
                        <ul id="pathcourselist">
                        {{# courses }}
                            <li class="text-truncate" data-courseid="{{ id }}"><i class="fa fa-globe"></i> {{ fullname }}</li>
                        {{/ courses }}
                        </ul>
                    {{/ iscourses }}
                </p>
            </div>
        </div>
    </div>
    <div class="col-sm-2">

    </div>
    <div class="col-sm-6">
        <div class="form-group">
            <label for="coursefilter">{{# str }}filter, local_iomad_learningpath{{/ str }}</label>
            <input id="coursefilter" class="form-control" type="text" name="coursefilter">
        </div>
        <div class="card bg-light">
            <div class="card-header">
                {{# str }}prospectivecourses, local_iomad_learningpath{{/ str }}<br />
                <small>{{# str }}clicktoadd, local_iomad_learningpath{{/ str }}</small>
            </div>
            <div class="card-body card-block">
                <p class="card-text">
                    {{^ isprospectivecourses }}
                        <div class="alert alert-warning">
                            {{# str }}noprospectivecourses, local_iomad_learningpath{{/ str }}
                        </div>
                    {{/ isprospectivecourses }}
                    {{# isprospectivecourses }}
                        <ul id="prospectivelist">
                        {{# prospectivecourses }}
                            <li class="text-truncate" data-courseid="{{ id }}"><i class="fa fa-globe"></i> {{ fullname }}</li>
                        {{/ prospectivecourses }}
                        </ul>
                    {{/ isprospectivecourses }}
                </p>
            </div>
        </div>
    </div>

    </div>
</div>
