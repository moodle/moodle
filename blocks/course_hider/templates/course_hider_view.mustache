<div class="block_course_hider_container">
    <form method="POST" id="course_hider_courses_selected">
    <table class="table table-hover table-striped sample_table">
        {{# show_count}}
        <caption>Number Of Courses: {{course_count}}</caption>
        {{/ show_count}}
        <thead>
            <tr>
                <th>{{# str }} ch_heading_id, block_course_hider {{/ str }}</th>
                <th>{{# str }} ch_heading_fullname, block_course_hider {{/ str }}</th>
                <!-- <th>{{# str }} ch_heading_shortname, block_course_hider {{/ str }}</th> -->
                <th>{{# str }} ch_heading_visible, block_course_hider {{/ str }}</th>
                <th>{{# str }} ch_heading_check, block_course_hider {{/ str }}
                    <input type="checkbox" id="course_hider_all" checked>
                </th>
            </tr>
        </thead>
        
        <tbody>
            {{# courses}}
            <tr data-rowid='{{id}}'>
                <td>{{id}}</td>
                <td><a href="{{ch_url}}/course/view.php?id={{id}}" target="_blank">{{fullname}}</a></td>
                <td>{{visible}}</td>
                <td>
                    <input class="course_hider_toggle" data-action="block_course_hider/course_selector" type="checkbox" name="course_{{id}}" value='{{id}}' checked>
                </td>
            </tr>
            {{/ courses }}

            {{^ courses }}
                <tr>
                    <td colspan="7" align="center">{{# str }} ch_no_courses, block_course_hider {{/ str }}</td>
                </tr>
            {{/ courses }}
        </tbody>
    </table>
    <button type="submit" id="course_hider_execute" class="btn btn-danger">Execute</button>
    </form>
</div>
