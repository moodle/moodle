<a href="#"
    id="xp-addon-required-{{ uniqid }}"
    role="button"
    onclick="return false;"
    data-toggle="popover"
    data-placement="top"
    data-container="body"
    data-content=""
    data-html="true"
    class="{{#mx}}xp-mx-2{{/mx}} xp-py-1 xp-px-1.5 xp-normal-case xp-text-2xs xp-inline-block xp-bg-black xp-text-white xp-rounded xp-no-underline xp-font-normal xp-align-middle">
    {{#str}} xpplusrequired, block_xp {{/str}}
</a>
{{#js}}
require([], function() {
    var htmlContent = {{#quote}}{{#str}} unlockfeaturewithxpplus, block_xp, {{ promourl }} {{/str}}{{/quote}};
    document.getElementById('xp-addon-required-{{ uniqid }}').setAttribute('data-content', htmlContent);
});
{{/js}}
