{{!
    @template block_xp/cm-selector

    CM selector.

    Example context (json):
    {
        "initwithcoursejson": "[]"
    }
}}
<div class="block_xp-cm-selector-widget" id="block_xp-cm-selector-widget-{{uniqid}}">
    <div class="course-search">
        <div class="course-selected" style="display: none">
            <label style="display: inline-block">
                {{#str}}courseselectedcolon, block_xp{{/str}} <span></span>
            </label>
            <button class="btn btn-sm btn-small btn-secondary course-selection-change">{{#str}}change, core_admin{{/str}}</button>
        </div>
        <div class="course-not-selected">
            <div class="form-group">
                <label for="block_xp-cm-selector-widget-{{uniqid}}-course-field">{{#str}}searchandselectcourse, block_xp{{/str}}</label>
                <input id="block_xp-cm-selector-widget-{{uniqid}}-course-field" style="margin: 0; width: 95%" type="text" class="form-control search-term-course" placeholder={{#quote}}{{#str}}entersearchterm, block_xp{{/str}}{{/quote}}>
            </div>
        </div>
    </div>
    <div class="cm-search" style="display: none">
        <input style="margin: 0; width: 95%" type="text" class="form-control search-term-cm" placeholder={{#quote}}{{#str}}filtermodules, block_xp{{/str}}{{/quote}}>
    </div>
    <div class="m-t-1 search-result-contents">
        {{> block_xp/resource-selector-contents }}
    </div>
</div>
{{#js}}
require(['jquery', 'block_xp/cm-selector'], function($, CmSelector) {
    var selector = '#block_xp-cm-selector-widget-{{uniqid}}';
    var initWithCourse = {{{initwithcoursejson}}};
    CmSelector.init($(selector), initWithCourse);
});
{{/js}}
